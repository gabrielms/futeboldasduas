<% provide(:title, "Entrar") %>
<h1>Entrar</h1>

<div class="row">
  <div class="span9 offset2">
    <%= form_for :session, url: sessions_path, 
                           html: { class: "form-horizontal" } do |f| %>
                           
      <div class="control-group">

        <%= f.label :login, "Nome de usuário", class: "control-label" %>
        <div class="controls">
          <%= f.text_field :login, placeholder: "Digite seu nome de usuário ou e-mail.",
                                  class: "input-xlarge" %>
        </div>

        <%= f.label :password, "Senha", class: "control-label" %>
        <div class="controls">
          <%= f.password_field :password, placeholder: "Digite sua senha.",
                                  class: "input-xlarge" %>
        </div>

        <div class="controls">
          <%= f.submit "Entrar", class: "btn btn-large btn-primary" %>  
        </div>
        
        <p>Você não possui uma conta? <%= link_to "Inscreva-se agora mesmo!", signup_path %></p>
      </div>          
    <% end %>
  </div>
</div>

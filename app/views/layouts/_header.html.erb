<header class ="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href=<%= root_path %>>Futebol das duas</a>  
      <nav>
        <ul class="nav pull-left">

          <% if is_admin? %>
            <li><%= link_to "Nova partida", novapartida_path %></li>
            <li><%= link_to "Novo jogador", novojogador_path %></li>
            <li><%= link_to "Resultado da partida", root_path %></li>
          <% end %>
          
        </ul>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
               <i class="icon-user icon-white" style="padding-right:5px;"></i> 
               <%= current_user.user %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Sair", signout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Entrar", signin_path %></li>
          <% end %>
        </ul>          
      </nav>
    </div>
  </div>
</header>
